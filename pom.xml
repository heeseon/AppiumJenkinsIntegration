<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>urqa.io</groupId>
  <artifactId>AppiumDemoWithJenkins</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>jar</packaging>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.19.1</version>
        <configuration>
			<platformName>${value}</platformName>
			<platformVersion>${value}</platformVersion>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <name>AppiumDemoWithJenkins</name>
  <repositories>
  
<repository>
 <id>in-project</id>
 <name>custom jars</name>
 <url>file://AppiumDemoWithJenkins/lib</url>
</repository>
<repository>
	<id>in-project-jenkins</id>
	<name>custom jars-jenkins</name>
	<url>file://${JENKINS_HOME}/jobs/${JOB_NAME}/workspace/lib</url>
</repository>
</repositories>
  
  
  <url>http://maven.apache.org</url>


  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencies>
  <dependency>
	<groupId>io.appium</groupId>
	<artifactId>heeseon</artifactId>
	<version>3.3.0</version>
</dependency>

  <dependency>
	<groupId>org.seleniumhq.selenium</groupId>
	<artifactId>selenium-server</artifactId>
	<version>2.52.0</version>
  </dependency>
	<dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.12</version>
        <scope>test</scope>
    </dependency>
  <dependency>  
    <groupId>commons-lang</groupId>  
    <artifactId>commons-lang</artifactId>  
    <version>2.6</version>  
  </dependency>  
  <dependency>  
    <groupId>commons-beanutils</groupId>  
    <artifactId>commons-beanutils</artifactId>  
    <version>1.8.3</version>  
  </dependency>  
  <dependency>  
    <groupId>commons-collections</groupId>  
    <artifactId>commons-collections</artifactId>  
    <version>3.2.1</version>  
  </dependency>  
  <dependency>  
    <groupId>commons-logging</groupId>  
    <artifactId>commons-logging</artifactId>  
    <version>1.1.1</version>  
  </dependency>  
  <dependency>  
    <groupId>net.sf.ezmorph</groupId>  
    <artifactId>ezmorph</artifactId>  
    <version>1.0.6</version>  
  </dependency>
  <dependency>
	<groupId>com.squareup.okhttp</groupId>
	<artifactId>okhttp</artifactId>
	<version>2.7.2</version>
  </dependency>
  <dependency>
    <groupId>com.squareup.okio</groupId>
    <artifactId>okio</artifactId>
    <version>1.6.0</version>
  </dependency> 
    <dependency>
        <groupId>net.sf.json-lib</groupId>
        <artifactId>json-lib</artifactId>
        <version>2.4</version>
        <classifier>jdk15</classifier>
    </dependency>
  </dependencies>  
</project>
